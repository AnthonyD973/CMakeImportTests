{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 25
	},
	"configurePresets": [
		{
			"name": "base-default",
			"hidden": true,
			"binaryDir": "${sourceDir}/build",
			"installDir": "${sourceDir}/../install/",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": {
					"type": "BOOL",
					"value": "ON"
				},
				"CPACK_PACKAGE_DIRECTORY": {
					"type": "PATH",
					"value": "${sourceDir}/packages"
				}
			}
		},
		{
			"name": "base-dev",
			"hidden": true,
			"description": "Base for dev/CI setup",
			"cacheVariables": {
				"CMAKE_CXX_CLANG_TIDY": {
					"type": "STRING",
					"value": "clang-tidy;--config-file=${sourceDir}/../.clang-tidy"
				},
				"ADE_CLANG_FORMAT_PLAIN": {
					"type": "STRING",
					"value": "clang-format;--style=file:${sourceDir}/../.clang-format"
				},
				"ADE_CLANG_FORMAT_GIT": {
					"type": "STRING",
					"value": "git;clang-format;--style=file:${sourceDir}/../.clang-format"
				},
				"ADE_CLANG_FORMAT_GIT_REF_COMMIT": {
					"type": "STRING",
					"value": "origin/main"
				},
				"CMAKE_MESSAGE_LOG_LEVEL": {
					"type": "STRING",
					"value": "VERBOSE"
				}
			}
		},
		{
			"name": "base-static",
			"hidden": true,
			"cacheVariables": {
				"BUILD_SHARED_LIBS": {
					"type": "BOOL",
					"value": "OFF"
				}
			}
		},
		{
			"name": "base-shared",
			"hidden": true,
			"cacheVariables": {
				"BUILD_SHARED_LIBS": {
					"type": "BOOL",
					"value": "ON"
				}
			}
		}
	],
	"buildPresets": [
		{
			"name": "base-default",
			"hidden": true,
			"jobs": 10
		}
	],
	"testPresets": [
		{
			"name": "base-default",
			"hidden": true,
			"execution": {
				"jobs": 10
			},
			"output": {
				"outputOnFailure": true
			}
		}
	]
}
